# Telegram Bot Token
TELEGRAM_TOKEN=your_telegram_bot_token_here

# OAuth 2.0 Configuration
OAUTH_CREDENTIALS_PATH=oauth_credentials.json
OAUTH_TOKENS_DIR=tokens
OAUTH_SERVER_HOST=localhost
OAUTH_SERVER_PORT=8000
# IMPORTANT: For production deployments, use HTTPS for the redirect URI.
# Example: OAUTH_REDIRECT_URI=https://yourdomain.com/oauth2callback
OAUTH_REDIRECT_URI=http://localhost:8000/oauth2callback

# Opcional: ID de hoja de cálculo por defecto
DEFAULT_SPREADSHEET_ID=your_default_spreadsheet_id_here

# Secret key for encrypting stored OAuth tokens.
# Generate one using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Store this key securely and DO NOT commit it to version control.
OAUTH_ENCRYPTION_KEY=your_secret_encryption_key_here

# Configuración adicional
LOG_LEVEL=INFO
